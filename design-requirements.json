{
  "designSystem": {
    "name": "LLM Training Course Design System",
    "version": "1.0.0",
    "description": "Comprehensive design system for the Interactive AI Training Course",
    "colorPalette": {
      "gradients": {
        "primary": {
          "background": "linear-gradient(135deg, #6B46C1 0%, #7C3AED 15%, #8B5CF6 30%, #EC4899 45%, #F97316 60%, #EAB308 75%, #22C55E 90%, #06B6D4 100%)",
          "description": "Main hero gradient.",
          "usage": "Hero sections"
        },
        "secondary": {
          "background": "linear-gradient(135deg, #8B5A2B 0%, #D97706 25%, #F59E0B 50%, #EF4444 75%, #7C2D12 100%)",
          "description": "Warm gradient for secondary sections.",
          "usage": "Feature highlights"
        },
        "progressFill": {
          "background": "linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%)",
          "usage": "Progress bar fill"
        },
        "stepNumber": {
          "background": "linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%)",
          "usage": "Learning path step number"
        },
        "featureIcon": {
          "background": "linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%)",
          "usage": "Feature card icon"
        },
        "overviewIcon": {
          "background": "linear-gradient(135deg, #3B82F6 0%, #10B981 100%)",
          "usage": "Overview card icon"
        }
      },
      "solid": {
        "white": "#FFFFFF",
        "black": "#000000",
        "gray": {
          "100": "#F9FAFB",
          "200": "#F3F4F6",
          "300": "#E5E7EB",
          "500": "#6B7280",
          "700": "#374151",
          "900": "#111827"
        },
        "accent": {
          "purple": "#8B5CF6",
          "green": "#10B981",
          "yellow": "#F59E0B",
          "blue": "#3B82F6"
        }
      }
    },
    "typography": {
      "fontFamilies": {
        "primary": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
      },
      "hierarchy": {
        "hero": {
          "fontSize": "clamp(3rem, 8vw, 6rem)",
          "fontWeight": "700",
          "lineHeight": "1.1",
          "color": "#FFFFFF"
        },
        "h2": {
          "fontSize": "clamp(2rem, 5vw, 3.5rem)",
          "fontWeight": "700",
          "lineHeight": "1.2",
          "color": "#000000"
        },
        "h3": {
          "fontSize": "1.5rem",
          "fontWeight": "600",
          "color": "#000000"
        },
        "h4": {
          "fontSize": "1.125rem",
          "fontWeight": "600",
          "color": "#000000"
        },
        "body": {
          "fontSize": "1.125rem",
          "fontWeight": "400",
          "lineHeight": "1.6",
          "color": "#6B7280"
        },
        "bodySmall": {
            "fontSize": "1rem",
            "lineHeight": "1.6",
            "color": "#6B7280"
        },
        "caption": {
          "fontSize": "0.875rem",
          "color": "#6B7280"
        }
      }
    },
    "elementStyling": {
      "navigation": {
        "container": {
          "background": "#FFFFFF",
          "backdropFilter": "blur(10px)",
          "borderBottom": "1px solid rgba(229, 231, 235, 0.3)",
          "padding": "1rem 2rem",
          "position": "sticky"
        },
        "logo": {
          "color": "#000000",
          "fontSize": "1.25rem",
          "fontWeight": "600"
        },
        "links": {
          "color": "#6B7280",
          "fontSize": "1rem",
          "fontWeight": "500",
          "hover": {
            "color": "#000000"
          }
        }
      },
      "buttons": {
        "primary": {
          "background": "#000000",
          "color": "#FFFFFF",
          "borderRadius": "0.5rem",
          "padding": "0.75rem 1.5rem",
          "fontSize": "1rem",
          "fontWeight": "500",
          "hover": {
            "background": "#1F2937",
            "transform": "translateY(-1px)"
          }
        },
        "secondary": {
          "background": "rgba(255, 255, 255, 0.1)",
          "color": "#FFFFFF",
          "border": "2px solid rgba(255, 255, 255, 0.2)",
          "borderRadius": "0.5rem",
          "padding": "0.75rem 1.5rem",
          "fontSize": "1rem",
          "fontWeight": "500",
          "hover": {
            "background": "rgba(255, 255, 255, 0.2)",
            "borderColor": "rgba(255, 255, 255, 0.4)"
          }
        }
      },
      "cards": {
        "step": {
          "background": "#FFFFFF",
          "border": "2px solid #E5E7EB",
          "borderRadius": "1rem",
          "padding": "2rem",
          "hover": {
            "borderColor": "#8B5CF6",
            "boxShadow": "0 8px 25px rgba(139, 92, 246, 0.15)",
            "transform": "translateY(-2px)"
          },
          "completed": {
            "borderColor": "#10B981",
            "background": "linear-gradient(135deg, #ECFDF5 0%, #F0FDF4 100%)"
          },
          "current": {
            "borderColor": "#F59E0B",
            "background": "linear-gradient(135deg, #FFFBEB 0%, #FEF3C7 100%)"
          }
        },
        "preview": {
          "background": "#FFFFFF",
          "border": "1px solid #E5E7EB",
          "borderRadius": "1rem",
          "padding": "1.5rem",
          "boxShadow": "0 2px 8px rgba(0, 0, 0, 0.1)",
          "hover": {
            "boxShadow": "0 8px 25px rgba(0, 0, 0, 0.15)",
            "transform": "translateY(-2px)"
          }
        },
        "feature": {
          "background": "rgba(255, 255, 255, 0.95)",
          "backdropFilter": "blur(10px)",
          "borderRadius": "0.75rem",
          "border": "1px solid rgba(229, 231, 235, 0.3)",
          "boxShadow": "0 8px 32px rgba(0, 0, 0, 0.1)",
          "padding": "2rem",
          "hover": {
            "transform": "translateY(-4px)"
          }
        },
        "overview": {
          "background": "#FFFFFF",
          "border": "1px solid #E5E7EB",
          "borderRadius": "1rem",
          "padding": "2rem",
          "boxShadow": "0 2px 8px rgba(0, 0, 0, 0.1)",
          "hover": {
            "boxShadow": "0 8px 25px rgba(0, 0, 0, 0.15)",
            "transform": "translateY(-2px)"
          }
        }
      }
    },
    "responsiveBreakpoints": {
      "tablet": "768px"
    }
  }
}
